<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GreetingMapper">
  <insert id="insertGreeting" parameterType="Greeting">
  	insert into Greetings (greetingText) values (#{greetingText})
  </insert>
  
  <select id="selectFirstGreeting" resultType="Greeting">
  	select * from Greetings limit 1
  </select>
</mapper>